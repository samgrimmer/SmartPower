<div class="fade show" tabindex="-1" role="dialog" style="display: block;">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Bulk Reversal Warning</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>@Common.Constant.BulkReversal.Message.DirtyPendingReversals</p>
                <p>@Common.Constant.BulkReversal.Message.DirtyPendingReversalsContinue</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" @onclick="OnContinue">Continue Bulk Reversal</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal" @onclick="OnClose">Close</button>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter] public EventCallback OnContinue { get; set; }
    [Parameter] public EventCallback OnClose { get; set; }
}
