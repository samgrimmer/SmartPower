@using SmartPower.Common
<div class="fade show" tabindex="-1" role="dialog" style="display: block;">
    <div class="modal-dialog modal-xl modal-dialog-scrollable" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Bulk Reversal Warning</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close" @onclick="OnClose">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <Toaster AlertClass="@Common.Enumeration.AlertClass.Warning.GetEnumerationDescription()" Message="@Message"></Toaster>
                <Invoice InvoiceIds="@InvoiceIds"></Invoice>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" @onclick="OnContinue">Continue Bulk Reversal</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal" @onclick="OnClose">Close</button>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter] public List<int> InvoiceIds { get; set; }

    [Parameter] public EventCallback OnContinue { get; set; }
    [Parameter] public EventCallback OnClose { get; set; }

    public string Message => $"{Constant.BulkReversal.Message.DirtyPendingReversals}. {Constant.BulkReversal.Message.DirtyPendingReversalsContinue}";
}
